<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neurosky.algo_sdk_sample"
    android:versionCode="1"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:required="false" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="WakeUpNet"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.neurosky.algo_sdk_sample.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Main"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.neurosky.algo_sdk_sample.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.neurosky.algo_sdk_sample.ResultsActivity"
            android:label="Results" />
        <activity
            android:name="com.neurosky.algo_sdk_sample.ConfigActivity"
            android:label="@string/title_activity_config" />
        <activity android:name="com.neurosky.algo_sdk_sample.RESTClient" />
        <activity
            android:name="com.neurosky.algo_sdk_sample.SignUp"
            android:label="SignUp" >
        </activity>
    </application>

</manifest>